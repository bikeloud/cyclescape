= semantic_form_for @note, html: { class: 'guided' } do |f|
  = f.inputs do
    = f.input :title
    = f.input :url
    = f.input :loc_json, as: :hidden
    %li.input.full-width
      %label.label= t "formtastic.labels.library/note.location"
      = f.semantic_errors :location
      = f.semantic_errors :size
      = render partial: "shared/edit_map", locals: {location: @start_location, f: f}
    = f.input :body, input_html: { rows: 15 }
    = f.input :tags_string
  = f.actions do
    = f.action :submit, button_html: {class: "btn-green submit", data: { disable_with: t("formtastic.actions.saving") }}
    = cancel_link library_path
