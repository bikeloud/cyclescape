= semantic_form_for @document, html: { class: 'guided' } do |f|
  = f.inputs do
    - hint = f.object.file ? "#{t('formtastic.hints.currently')} #{f.object.file.name}" : ""
    = f.input :file, as: :file, hint: hint
    = f.input :retained_file, as: :hidden
    = f.input :title
    %li.input.full-width
      %label.label= t "formtastic.labels.issue.new.location"
      = f.semantic_errors :location
      = f.semantic_errors :size
      = render partial: "shared/edit_map", locals: {location: @start_location, f: f}
    = f.input :tags_string
  = f.actions do
    = f.action :submit, button_html: {class: "btn-green submit", data: { disable_with: t("formtastic.actions.saving") }}
    = cancel_link library_path
