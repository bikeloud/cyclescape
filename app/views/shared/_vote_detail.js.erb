<% if (current_user && current_user.voted_for?(resource)) %>
  $('#voteable_<%= resource.id  %> .voted').show();
  $('#voteable_<%= resource.id  %> .not-voted').hide();
<% else %>
  $('#voteable_<%= resource.id  %> .not-voted').show();
  $('#voteable_<%= resource.id  %> .voted').hide();
<% end %>
$('#voteable_<%= resource.id  %> .vote-count').prop('title', "<%= j(voter_names(resource)) %>");
$('#voteable_<%= resource.id  %> .tally').text('<%= resource.plusminus %>');
