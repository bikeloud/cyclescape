%h2
  = t ".forgot_password"
= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'devise-form' }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.inputs do
    = f.input :email
  = f.actions do
    = f.action :submit, label: t(".send_reset_instuctions")
= render partial: "devise/shared/links"
