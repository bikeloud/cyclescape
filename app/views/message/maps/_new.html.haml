#new-map-message.pane
  - map = message.map_messages.build
  = message_form.semantic_fields_for :map_messages, map do |f|
    = f.inputs do
      = f.input :loc_json, as: :hidden
      = f.input :caption
      %li.input.full-width
        %label.label= t "formtastic.labels.issue.new.location"
        = f.semantic_errors :location
        = render partial: "shared/edit_map", locals: { location: @thread.issue&.location || current_user.start_location, resource: f.object }
