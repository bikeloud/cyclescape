= semantic_form_for @profile, url: [@profile.group, :profile] do |f|
  = f.inputs do
    = f.input :description
    = f.input :loc_json, as: :hidden
    %li.input
      = f.semantic_errors :location
      = render partial: "shared/edit_map", locals: { f: f, location: @profile.location || @start_location }
    = render "shared/image_edit", { resource: @profile, attribute: "picture", opts: { width: 330, height: 192, enableresize: false }, f: f, hint: t("formtastic.hints.group_profile.picture") }
    = render "shared/image_edit", { resource: @profile, attribute: "logo", opts: { width: 330, height: 192, enableresize: false }, f: f, hint: t("formtastic.hints.group_profile.logo") }
    = f.input :joining_instructions, hint: t("formtastic.hints.group_profile.joining_instructions", application_name: @site_config.application_name)
    = f.input :new_user_email, placeholder: t("formtastic.placeholders.group_profile.new_user_email", application_name: @site_config.application_name, application_domain: @site_config.email_domain)
  = f.actions
