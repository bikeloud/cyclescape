%p= t ".site_config_intro"

= semantic_form_for @live_site_config, url: [:admin, @live_site_config] do |f|
  = f.inputs do
    = f.input :logo, as: :file
    = f.input :retained_logo, as: :hidden
    = f.input :small_logo, as: :file
    = f.input :retained_small_logo, as: :hidden
    = f.input :application_name
    = f.input :funder_name_footer1
    = f.input :funder_url_footer1
    = f.input :funder_image_footer1, as: :file
    = f.input :retained_funder_image_footer1, as: :hidden
    = f.input :funder_name_footer2
    = f.input :funder_url_footer2
    = f.input :funder_image_footer2, as: :file
    = f.input :retained_funder_image_footer2, as: :hidden
    = f.input :funder_name_footer3
    = f.input :funder_url_footer3
    = f.input :funder_image_footer3, as: :file
    = f.input :retained_funder_image_footer3, as: :hidden
    = f.input :funder_name_footer4
    = f.input :funder_url_footer4
    = f.input :funder_image_footer4, as: :file
    = f.input :retained_funder_image_footer4, as: :hidden
    = f.input :funder_name_footer5
    = f.input :funder_url_footer5
    = f.input :funder_image_footer5, as: :file
    = f.input :retained_funder_image_footer5, as: :hidden
    = f.input :funder_name_footer6
    = f.input :funder_url_footer6
    = f.input :funder_image_footer6, as: :file
    = f.input :retained_funder_image_footer6, as: :hidden
    = f.input :nowhere_location, as: :string
    = f.input :facebook_link
    = f.input :twitter_link
    = f.input :blog_about_url
    = f.input :blog_url
    = f.input :blog_user_guide_url
    = f.input :default_locale, as: :select, collection: UserProfile.all_locales.values.map {|loc| [loc.label, loc.locale]}, include_blank: false
    = f.input :timezone, as: :select, collection: ActiveSupport::TimeZone.all.map { |tz| tz.tzinfo.name }.uniq, include_blank: false
    = f.input :ga_account_id, hint: "Google Analyitics ID"
    = f.input :ga_base_domain, hint: "Google Analyitics domain"
    = f.input :default_email, hint: "the from address when sending emails / notifications"
    = f.input :email_domain, hint: "used as the reply address in issue and thread notifications"
    = f.input :tile_server1_name, hint: "tile servers used on the leaflet map, name will be the name of the layer. 1 is the default layer"
    = f.input :tile_server1_url
    = f.input :tile_server1_type, as: :select, collection: SiteConfig::TILE_SERVER_TYPES
    = f.input :tile_server1_options
    = f.input :tile_server2_name
    = f.input :tile_server2_url
    = f.input :tile_server2_type, as: :select, collection: SiteConfig::TILE_SERVER_TYPES
    = f.input :tile_server2_options
    = f.input :tile_server3_name
    = f.input :tile_server3_url
    = f.input :tile_server3_type, as: :select, collection: SiteConfig::TILE_SERVER_TYPES
    = f.input :tile_server3_options
    = f.input :admin_email, hint: "only used for comments at the moment"
    = f.input :geocoder_url
    = f.input :geocoder_key, hint: "your <a href='https://www.cyclestreets.net/api/'>Cyclestreets API key</a>".html_safe
    = f.input :google_street_view_api_key, hint: "see <a href='https://developers.google.com/maps/documentation/streetview/get-api-key'>Google page</a>"
    = f.input :planit_api_key
  = f.actions
